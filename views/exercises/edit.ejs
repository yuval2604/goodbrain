<% include ../partials/header %>
<div class="container">
    <div class="row">
        <h1 style="text-align: center">Edit <%= exercise.name %></h1>
        <div style="width: 30%; margin: 25px auto;">
            <form action="/exercises/<%= exercise._id %>?_method=PUT" method="POST">
                <div class="form-group">
                    <input class="form-control" type="text" name="exercise[name]" value="<%= exercise.name %>">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="exercise[image]" value="<%= exercise.image %>">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="exercise[description]" value="<%= exercise.description %>">
                </div>
                <div class="form-group">
                    <button class="btn btn-lg btn-primary btn-block">Submit!</button>
                </div>
            </form>
            <a href="/exercises">Go Back</a>
        </div>
    </div>
</div>
<% include ../partials/footer %>

